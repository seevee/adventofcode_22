// tsconfig.json
{
  "compilerOptions": {
    "lib": ["ES5", "ES6", "ES7"],
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@util/*": ["util/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "esm": true
  }
}
